[Unit]
Description=Telegram Bot
After=network.target


[Service]
User=root
Group=root

WorkingDirectory=/home/tg/python-telegram-bot/
Environment="PYTHONPATH=/home/tg/python-telegram-bot/ TG_CONF=production"
ExecStart=python3 /home/tg/python-telegram-bot/bot/main.py

[Install]
WantedBy=multi-user.target